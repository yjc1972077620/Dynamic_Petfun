<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    app:cardCornerRadius="4dp"
    android:background="#ffffffff"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_margin="6dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/user_image"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:id="@+id/user_name"
                android:layout_toRightOf="@+id/user_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:textColor="@color/black"
            android:layout_margin="8dp"
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/image_row1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <ImageView
            android:maxHeight="160dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:id="@+id/image1"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:minHeight="100dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:maxHeight="160dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:id="@+id/image2"
            android:layout_margin="4dp"
            android:minHeight="100dp"

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:minHeight="100dp"
            android:maxHeight="160dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:id="@+id/image3"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/image_row2"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <ImageView
            android:minHeight="100dp"
            android:scaleType="fitCenter"
            android:id="@+id/image4"
            android:visibility="gone"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:maxHeight="160dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:id="@+id/image5"
            android:layout_margin="4dp"
            android:minHeight="100dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:maxHeight="160dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:id="@+id/image6"
            android:layout_margin="4dp"
            android:minHeight="100dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/image_row3"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <ImageView

            android:scaleType="fitCenter"
            android:id="@+id/image7"
            android:visibility="gone"
            android:layout_margin="4dp"
            android:minHeight="100dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView

            android:scaleType="fitCenter"
            android:visibility="gone"
            android:id="@+id/image8"
            android:layout_margin="4dp"
            android:minHeight="100dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:minHeight="100dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:id="@+id/image9"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:layout_alignParentLeft="true"
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_toLeftOf="@+id/comment_layout"
                android:id="@+id/dianzan_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:background="#00000000"
                    android:src="@drawable/love_pre"
                    android:id="@+id/dianzan_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/dianzan_image"
                    android:id="@+id/dianzan_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_alignParentRight="true"
                android:id="@+id/comment_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:background="#00000000"
                    android:src="@drawable/comment"
                    android:id="@+id/comment_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/comment_image"
                    android:id="@+id/comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>